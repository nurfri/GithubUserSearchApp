<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_detail_user"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_detail_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4"/>
                <TextView
                    android:id="@+id/txt_title_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/gl_user"/>
                <TextView
                    android:id="@+id/txt_title_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_detail_username"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/gl_user"/>
                <TextView
                    android:id="@+id/txt_title_company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_detail_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/gl_user"/>
                <TextView
                    android:id="@+id/txt_title_blog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_detail_company"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/gl_user"/>
                <TextView
                    android:id="@+id/txt_title_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_detail_blog"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/gl_user"/>
                <TextView
                    android:id="@+id/txt_title_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_detail_location"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/gl_user"/>
                <TextView
                    android:id="@+id/txt_title_bio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_detail_email"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/gl_user"/>
                <TextView
                    android:id="@+id/txt_title_followers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_detail_bio"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/gl_user"/>
                <TextView
                    android:id="@+id/txt_title_following"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_detail_followers"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/gl_user"/>
                <TextView
                    android:id="@+id/txt_detail_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl_user"/>
                <TextView
                    android:id="@+id/txt_detail_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_username"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl_user"/>
                <TextView
                    android:id="@+id/txt_detail_company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_detail_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl_user"/>
                <TextView
                    android:id="@+id/txt_detail_blog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_company"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl_user"/>
                <TextView
                    android:id="@+id/txt_detail_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_blog"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl_user"/>
                <TextView
                    android:id="@+id/txt_detail_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_location"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl_user"/>
                <TextView
                    android:id="@+id/txt_detail_bio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_email"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl_user"/>
                <TextView
                    android:id="@+id/txt_detail_followers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_bio"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl_user"/>
                <TextView
                    android:id="@+id/txt_detail_following"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmerGray"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_followers"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/gl_user"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>